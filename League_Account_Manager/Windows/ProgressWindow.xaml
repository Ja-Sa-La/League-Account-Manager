<Window x:Class="League_Account_Manager.views.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Width="250" Height="60"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize">
    <Border CornerRadius="6" Background="#DD333333" Padding="10">
        <StackPanel>
            <TextBlock x:Name="StatusText" Foreground="White" FontWeight="Bold"/>
            <ProgressBar x:Name="ProgressBar" Height="20" Minimum="0"/>
        </StackPanel>
    </Border>
</Window>