<Window x:Class="League_Account_Manager.Windows.DisplayDataWithSearch"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" Height="439"
        Width="400" WindowStyle="None" WindowStartupLocation="CenterScreen" Background="#FF252525"
        MouseDown="Window_MouseDownDatadisplay" Deactivated="Window_Deactivated" ResizeMode="NoResize">
    <Grid Background="#FF252525" Margin="0,0,0,0">
        <ui:TextBox MouseDown="Window_MouseDownDatadisplay"
                    Name="Datathing" Margin="10,46,10,10"
                    TextWrapping="WrapWithOverflow" Text=""
                    IsEnabled="True" IsReadOnly="true" VerticalScrollBarVisibility="Visible"
                    IsReadOnlyCaretVisible="True" IsManipulationEnabled="True" IsTextSelectionEnabled="True"
                    IsInactiveSelectionHighlightEnabled="True" />
        <ui:TextBox Margin="10,7,10,0" TextAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Top"
                    TextWrapping="NoWrap" Name="datafiltersearch" PlaceholderText="Search"
                    TextChanged="TextBox_TextChangeddatafilt" />
    </Grid>
</Window>