<Window
    WindowStyle="None"
    x:Class="League_Account_Manager.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    mc:Ignorable="d"
    Title="League Account Manager" Height="800" Width="1400"
    AllowsTransparency="True"
    xmlns:notifications="clr-namespace:Notification.Wpf.Controls;assembly=Notification.Wpf"
    xmlns:Page="clr-namespace:League_Account_Manager.views"
    Background="#FF232323">

    <Grid
        x:Name="RootMainGrid"
        Margin="0,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


        <Label Content="" Name="installloc" HorizontalAlignment="Left" Margin="450,3,0,0"
               VerticalAlignment="Top"
               Width="489" Height="22" />
        <Label Content="" Name="installloclea" HorizontalAlignment="Left" Margin="450,25,0,0"
               VerticalAlignment="Top"
               Width="489" Height="22" />
        <TextBox Text="" HorizontalAlignment="Left" Height="22" Margin="939,3,0,0" Name="leaguedata"
                 VerticalAlignment="Top" Width="380" Background="Transparent" Foreground="White">
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Setter Property="IsReadOnly" Value="True" />
                    <Setter Property="BorderThickness" Value="0" />
                    <Setter Property="TextWrapping" Value="Wrap" />
                </Style>
            </TextBox.Style>
        </TextBox>
        <TextBox Text="" HorizontalAlignment="Left" Height="22" Margin="939,25,0,0" Name="riotdata"
                 VerticalAlignment="Top" Width="380" Foreground="White" Background="Transparent">
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Setter Property="IsReadOnly" Value="True" />
                    <Setter Property="BorderThickness" Value="0" />
                    <Setter Property="TextWrapping" Value="Wrap" />
                </Style>
            </TextBox.Style>
        </TextBox>
        <ui:NavigationView Grid.Row="1" OpenPaneLength="175" IsBackButtonVisible="Collapsed" MinWidth="50"
                           x:Name="RootNavigation" Grid.Column="0" Loaded="RootNavigation_OnLoaded">
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem NavigationCacheMode="Required" Content="Dashboard" TargetPageTag="home"
                                       TargetPageType="{x:Type Page:Accounts}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="Home20" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem Content="Add accounts" TargetPageType="{x:Type Page:AddAccounts}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="AddSquareMultiple20" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem Content="Champion select" TargetPageType="{x:Type Page:ChampionSelect}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="Group20" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem Content="Auto Champ select" NavigationCacheMode="Required"
                                       TargetPageType="{x:Type Page:Autolobby}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="Group20" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem Content="Buy champions" TargetPageType="{x:Type Page:ChampionBuyer}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="Money20" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem Content="Report tool" TargetPageType="{x:Type Page:ReportTool}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="BookExclamationMark20" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem Content="Misc" TargetPageType="{x:Type Page:MiscTools}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="AppGeneric20" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem Content="Chat" NavigationCacheMode="Required"
                                       TargetPageType="{x:Type Page:ProfileEditor}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="Chat20" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem Content="Loot"
                                       TargetPageType="{x:Type Page:DisEnchanter}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="ShoppingBag20" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem Content="Ingame settings"
                                       TargetPageType="{x:Type Page:SettingsEditor}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="EditSettings20" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
            </ui:NavigationView.MenuItems>
            <ui:NavigationView.FooterMenuItems>
                <Label Height="20" x:Name="version" Content="Version" HorizontalAlignment="Left" Foreground="#80FFFFFF"
                       Padding="15,0,0,4" />
                <ui:NavigationViewItem Content="Settings" TargetPageType="{x:Type Page:Settings}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="Settings24" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
            </ui:NavigationView.FooterMenuItems>
        </ui:NavigationView>
        <ui:TitleBar Grid.Column="1"
                     Title="League Account Manager" Grid.ColumnSpan="2"
                     Grid.Row="0" FontFamily="Arial Black" FontSize="20" Height="31" Focusable="True"
                     ShowMaximize="False"
                     CanMaximize="False" Padding="0,0,0,0" Margin="10,0,0,0" />
        <notifications:NotificationArea Grid.Column="1"
                                        x:Name="WindowArea" Position="TopRight" MaxItems="1" Grid.ColumnSpan="2"
                                        Grid.RowSpan="2"
                                        Margin="0,-10,0,0" />

    </Grid>
</Window>